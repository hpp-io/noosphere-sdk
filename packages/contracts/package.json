{
  "name": "@noosphere/contracts",
  "version": "0.2.0-alpha.1",
  "description": "Noosphere smart contract TypeScript wrappers and ABIs",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "src/abis"
  ],
  "scripts": {
    "typechain": "typechain --target ethers-v6 --out-dir src/typechain 'src/abis/*.json'",
    "build": "npm run typechain && tsup",
    "clean": "rm -rf dist src/typechain",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "noosphere",
    "ethereum",
    "contracts",
    "web3"
  ],
  "author": "Noosphere Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hpp-io/noosphere-sdk.git",
    "directory": "packages/contracts"
  },
  "bugs": {
    "url": "https://github.com/hpp-io/noosphere-sdk/issues"
  },
  "homepage": "https://github.com/hpp-io/noosphere-sdk/tree/main/packages/contracts#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "ethers": "^6.13.0"
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "tsup": "^8.0.0",
    "typechain": "^8.3.2",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
